root = true

[*]
insert_final_newline = true
charset = utf-8

[*.{js,json,ts}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{py,lua}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[{Dockerfile*,*.docker,Jenkinsfile}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.sh]
indent_style = tab
indent_size = 4
